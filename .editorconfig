# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# TypeScript and JavaScript files
[*.{ts,js}]
quote_type = single

# Test files can sometimes be longer with describe/it blocks
[**/__tests__/**]
max_line_length = 120

# Don't trim whitespace in JSON files to maintain proper formatting
[*.json]
insert_final_newline = false