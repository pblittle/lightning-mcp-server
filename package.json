{
  "name": "mcp-server-lnd",
  "version": "1.0.0",
  "description": "MCP Server for LND",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test jest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run build -- --noEmit",
    "mcp": "node run.js",
    "mcp:dev": "NODE_ENV=development node run.js",
    "mcp:test": "NODE_ENV=test node run.js",
    "mcp:prod": "NODE_ENV=production node run.js",
    "mcp:mock": "npm run build && node scripts/mock-server.js",
    "mcp:fixed-mock": "node scripts/mock-server.js",
    "mcp:inspector-test": "node scripts/mcp-inspector-test.js"
  },
  "keywords": [
    "lightning",
    "lnd",
    "bitcoin",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pblittle/mcp-server-lnd.git"
  },
  "author": "P. Barrett Little",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "^16.3.1",
    "ln-service": "^57.23.1",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
